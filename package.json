{
  "name": "pixss",
  "version": "1.0.0",
  "description": "A minimal css library for quick prototyping",
  "main": "index.html",
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "banner-cli": "^0.14.1",
    "browser-sync": "^2.18.5",
    "copyfiles": "^2.3.0",
    "gh-pages": "^3.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.7",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "postcss-cli": "^7.1.1",
    "prettier-standard": "^16.3.0",
    "rimraf": "^3.0.2",
    "sass-lint": "^1.12.1"
  },
  "scripts": {
    "copyPageFiles": "rimraf gh-pages && copyfiles index.html sites/* sites/*/* dist/* gh-pages/",
    "deploy": "run-s build copyPageFiles && node deploy.js",
    "autoprefixer": "postcss -u autoprefixer --no-map.inline --autoprefixer.browsers \"last 1 versions\" -r dist/*.css",
    "banner": "banner-cli dist/*.css",
    "build": "rimraf dist && run-s sass autoprefixer banner",
    "lint": "prettier-standard --check && sass-lint --verbose --no-exit",
    "prepublishOnly": "npm run build",
    "sass": "node_modules/node-sass/bin/node-sass --output-style expanded src/pixss.sass dist/pixss.css && node-sass --output-style compressed src/pixss.sass dist/pixss.min.css",
    "serve": "browser-sync start --no-notify -s test --ss dist -f dist",
    "start": "run-p build watch serve",
    "watch": "onchange src -- run-p build"
  },
  "prettier": {
    "jsxSingleQuote": false,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": [
      "prettier-standard --format",
      "git add"
    ]
  },
  "keywords": [
    "css"
  ],
  "author": "Xun Zhou <segentor@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vikbert/pixss.git"
  },
  "bugs": {
    "url": "https://github.com/vikbert/pixss/issues"
  },
  "homepage": "https://vikbert.github.io/pixss"
}
